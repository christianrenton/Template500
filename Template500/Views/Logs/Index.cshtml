@model IList<Template500.ViewModels.LogEntryViewModel>
@{
    Page.Title = "Logs";
}

<h1>@Page.Title</h1>
<div class="table-container">
@if (Model.Count > 0)
{ 
    <table id="log-table">
        <thead>
            <tr>
                <th>
                    Application
                </th>
                <th>
                    Code
                </th>
                <th>
                    Date
                </th>
                <th>
                    Message
                </th>
                <th>
                    User
                </th>
                <th>
                    View
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                <td>@log.Application</td>
                <td>@log.Code</td>
                <td>@log.Date.ToString("MM/dd/yy H:mm:ss")</td>
                <td>@log.Message</td>
                <td>@log.User</td>
                <td>@log.View</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>
        <em>There are no log entries</em>
    </p>
}
</div>